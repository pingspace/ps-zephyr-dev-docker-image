{
  "name": "PS zephyr dev container",
  "runArgs": [
    "--privileged", "-v=/dev:/dev", "-v=/sys:/sys"
  ],
  "build": {
    "dockerfile": "../Dockerfile.devel"
  },
  "mounts": [
    "source=${localEnv:LOCAL_WORKSPACE_PATH},target=/workdir,type=bind"
  ],
  "workspaceFolder": "/workdir",

  "containerEnv": {
    "SHELL": "/bin/bash"
  }
}
